<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <properties resource = "application.properties"> <!--ссылка на файл со свойствами(ссылка на СУБД, логин, пароль и тп.)-->
    </properties>
    <environments default = "development">
        <environment id = "development">
            <transactionManager type = "JDBC"/>
            <dataSource type = "POOLED">
                <property name = "driver" value = "${driverDB}"/>
                <property name = "url" value = "${urlDB}"/>
                <property name = "username" value = "${userDB}"/>
                <property name = "password" value = "${passwordDB}" />
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper class = "ru.burmistrov.tm.repository.TaskRepository"/>
        <mapper class = "ru.burmistrov.tm.repository.ProjectRepository"/>
        <mapper class = "ru.burmistrov.tm.repository.UserRepository"/>
        <mapper class = "ru.burmistrov.tm.repository.SessionRepository"/>
    </mappers>
</configuration>
